[alias]
  co = checkout
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  editor = vim 
  autocrlf = input
  attributesfile = ~/.gitattributes
  excludesfile = ~/.gitignore
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[push]
  default = simple
[pager]
  # Use diff-so-fancy
  diff = diff-so-fancy | less --tabs=4
  show = diff-so-fancy | less --tabs=4
[include]
  path = ~/.gitconfig.local
